<%= render "/shared/header" %>

<%= link_to "Back to All Projects", projects_url %>

<% if @project.owner == current_user %>
| <%= link_to "Edit", edit_project_path(@project) %>
| <%= link_to "Delete", @project, method: :delete, data: 
	{confirm: "Are you sure you want to delete this project?"}  %>
<% end %>

<h3><%= @project.name %></h3>
<p>Name: <%= @project.name %> </br> 
	Description: <%= @project.description %> </br>
	Link: <%= @project.link %> </br>
	Created by: <%= @project.owner %></p> 

 <h3>Reviews for <%= @project.name %></h3>
  <%= render '/reviews/displayReviews'%>

 <% if current_user %>
  <%= render '/reviews/newReviewForm'%>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a comment.</p> 
  <% end %>